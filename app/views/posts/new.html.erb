
<% if user_signed_in?%>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:post) do |f| %>
        <%= f.label :content %>
        <%= f.text_field :content, class: 'form-control' %>
        <br>
        <%= f.submit "New Post", class: "btn btn-primary" %>
      <% end %>
    </div>
<%else%>
    <h1 class="text-center"> Please Sign-in</h1>
  </div>
<%end%>


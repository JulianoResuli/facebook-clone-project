<div class="col-md-4">
  <div class="user-space text-center">
    <h1><%= gravatar_for current_user %></h1>
    <h2>
      Hello 
      <% if current_user.first_name || current_user.last_name %>
        <%= current_user.first_name %>
        <%= current_user.last_name %>
      <% else %>
        stranger
      <% end %>
    </h2>
    <p>The time is now: <%= Time.now %></p>
  </div>
  <div class="friends-space row">
    <h1> Friend list: </h1>
    <% friends = get_friends(current_user) %>
    <% if friends == [] %>
      <h2 class="text-center">No friends yet! Too shy?</h2>
    <% else %>
      <% friends.each do |user| %>
        <%= render 'user/user_profile_small', :user => user %>
      <% end %>
    <% end %>
  </div>
</div>

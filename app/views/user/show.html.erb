<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= gravatar_for @user %></h1>
      <h1>
        <%= @user.first_name %>
        <%= @user.last_name %>
      </h1>
      <h3><%= @user.email %></h3>
      <%if @user.birthday%>
      <h3>Age: <%= age(@user.birthday) %></h3>
      <%end%>
    </section>
  </aside>
  <%= render 'posts_with_comments'%>
</div>